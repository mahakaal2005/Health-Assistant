<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.health_assistant.features.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <!-- Navigation actions from Home to other fragments -->
        <action
            android:id="@+id/action_homeFragment_to_browseFragment"
            app:destination="@id/browseFragment" />
        <action
            android:id="@+id/action_homeFragment_to_diaryFragment"
            app:destination="@id/diaryFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/browseFragment"
        android:name="com.example.health_assistant.features.browse.BrowseFragment"
        android:label="Browse"
        tools:layout="@layout/fragment_browse">

        <!-- Navigation actions from Browse to other fragments -->
        <action
            android:id="@+id/action_browseFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_browseFragment_to_diaryFragment"
            app:destination="@id/diaryFragment" />
        <action
            android:id="@+id/action_browseFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/diaryFragment"
        android:name="com.example.health_assistant.features.diary.DiaryFragment"
        android:label="Diary"
        tools:layout="@layout/fragment_diary">

        <!-- Navigation actions from Diary to other fragments -->
        <action
            android:id="@+id/action_diaryFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_diaryFragment_to_browseFragment"
            app:destination="@id/browseFragment" />
        <action
            android:id="@+id/action_diaryFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.health_assistant.features.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <!-- Navigation actions from Profile to other fragments -->
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_browseFragment"
            app:destination="@id/browseFragment" />
        <action
            android:id="@+id/action_profileFragment_to_diaryFragment"
            app:destination="@id/diaryFragment" />
    </fragment>

</navigation>