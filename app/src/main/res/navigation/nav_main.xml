<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.health_assistant.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/dashboard_fragment">
        <action
            android:id="@+id/action_dashboardFragment_to_healthMetricsFragment"
            app:destination="@id/healthMetricsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_appointmentsFragment"
            app:destination="@id/appointmentsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_medicationsFragment"
            app:destination="@id/medicationsFragment" />
    </fragment>

    <!-- Placeholder fragments for dashboard features - you can implement these later -->
    <fragment
        android:id="@+id/healthMetricsFragment"
        android:name="com.example.health_assistant.features.health.HealthMetricsFragment"
        android:label="Health Metrics"
        tools:layout="@layout/fragment_health_metrics" />

    <fragment
        android:id="@+id/appointmentsFragment"
        android:name="com.example.health_assistant.features.appointments.AppointmentsFragment"
        android:label="Appointments"
        tools:layout="@layout/fragment_appointments" />

    <fragment
        android:id="@+id/medicationsFragment"
        android:name="com.example.health_assistant.features.medications.MedicationsFragment"
        android:label="Medications"
        tools:layout="@layout/fragment_medications" />

</navigation>