<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.health_assistant.features.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/browseFragment"
        android:name="com.example.health_assistant.features.browse.BrowseFragment"
        android:label="Browse"
        tools:layout="@layout/fragment_browse" />

    <fragment
        android:id="@+id/diaryFragment"
        android:name="com.example.health_assistant.features.diary.DiaryFragment"
        android:label="Diary"
        tools:layout="@layout/fragment_diary" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.health_assistant.features.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <!-- Retained fragments that were referenced from the dashboard -->
    <fragment
        android:id="@+id/healthMetricsFragment"
        android:name="com.example.health_assistant.features.health.HealthMetricsFragment"
        android:label="Health Metrics"
        tools:layout="@layout/fragment_health_metrics" />

    <fragment
        android:id="@+id/appointmentsFragment"
        android:name="com.example.health_assistant.features.appointments.AppointmentsFragment"
        android:label="Appointments"
        tools:layout="@layout/fragment_appointments" />

    <fragment
        android:id="@+id/medicationsFragment"
        android:name="com.example.health_assistant.features.medications.MedicationsFragment"
        android:label="Medications"
        tools:layout="@layout/fragment_medications" />

