<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DashboardCard"
    android:id="@+id/dashboard_card"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Colored accent indicator on the left -->
        <View
            android:id="@+id/feature_accent_indicator"
            style="@style/SectionAccentIndicator"
            android:background="@color/health_check_accent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Card content area -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_content"
            style="@style/CardContentLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/feature_accent_indicator"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Feature Icon with colored circular background -->
            <FrameLayout
                android:id="@+id/icon_container"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/section_icon_background"
                android:backgroundTint="@color/health_check_accent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/feature_icon"
                    style="@style/DashboardSectionIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Section icon"
                    android:src="@drawable/ic_health_check" />
            </FrameLayout>

            <!-- Title and description -->
            <TextView
                android:id="@+id/feature_title"
                style="@style/DashboardCardTitle"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:text="Health Check"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icon_container"
                app:layout_constraintTop_toTopOf="@+id/icon_container" />

            <TextView
                android:id="@+id/feature_description"
                style="@style/DashboardCardDescription"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:text="Start a health check, input symptoms and get personalized analysis"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/icon_container"
                app:layout_constraintTop_toBottomOf="@+id/feature_title" />

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/feature_description" />

            <!-- Action chips container -->
            <HorizontalScrollView
                android:id="@+id/actions_scroll_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/action_chips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipSpacing="10dp"
                    app:singleLine="true">

                    <!-- Primary action chip (more prominent) -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/primary_action_chip"
                        style="@style/ActionChip.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Check"
                        app:chipBackgroundColor="@color/health_check_accent"
                        android:textColor="@color/white" />

                    <!-- Secondary action chips -->
                    <com.google.android.material.chip.Chip
                        style="@style/ActionChip.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Audio Input"
                        app:chipStrokeColor="@color/health_check_accent" />

                    <com.google.android.material.chip.Chip
                        style="@style/ActionChip.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View History"
                        app:chipStrokeColor="@color/health_check_accent" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>